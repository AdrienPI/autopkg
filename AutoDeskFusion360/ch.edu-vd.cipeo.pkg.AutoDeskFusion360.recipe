<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Description</key>
    <string>Downloads the latest version of Autodesk Fusion 360 for Education and creates package.</string>
    <key>Identifier</key>
    <string>ch.edu-vd.cipeo.pkg.AutoDeskFusion360</string>
    <key>Input</key>
    <dict>
        <key>NAME</key>
        <string>Autodesk Fusion 360</string>
    </dict>
    <key>MinimumVersion</key>
    <string>0.6.1</string>
    <key>ParentRecipe</key>
    <string>ch.edu-vd.cipeo.download.AutoDeskFusion360</string>
    <key>Process</key>
    <array>
        <dict>
            <key>Processor</key>
            <string>FlatPkgUnpacker</string>
            <key>Arguments</key>
            <dict>
                <key>flat_pkg_path</key>
                <string>%pathname%</string>
                <key>destination_path</key>
                <string>%RECIPE_CACHE_DIR%/unpack</string>
            </dict>
        </dict>
        <dict>
			<key>Processor</key>
			<string>com.github.adrienpi.SharedProcessors/GetUserHome</string>
		</dict>
		<dict>
           <key>Arguments</key>
           <dict>
              <key>input_plist_path</key>
              <string>%RECIPE_CACHE_DIR%/payload/Autodesk Fusion 360.app/Contents/Info.plist</string>
              <key>plist_version_key</key>
              <string>%VERSIONTYPE%</string>
           </dict>
           <key>Processor</key>
           <string>Versioner</string>
        </dict>
        <dict>
            <key>Processor</key>
            <string>PkgPayloadUnpacker</string>
            <key>Arguments</key>
            <dict>
                <key>pkg_payload_path</key>
                <string>%RECIPE_CACHE_DIR%/unpack/Payload</string>
                <key>destination_path</key>
                <string>%RECIPE_CACHE_DIR%/payload</string>
            </dict>
        </dict>
		<dict>
			<key>Processor</key>
			<string>PlistReader</string>
			<key>Arguments</key>
			<dict>
				<key>info_path</key>
			    <string>%RECIPE_CACHE_DIR%/payload/Autodesk Fusion 360.app/Contents/Info.plist</string>
			    <key>plist_keys</key>
			    <dict>
			        <key>CFBundleIdentifier</key>
			        <string>bundle_identifier</string>
					<key>LSMinimumSystemVersion</key>
					<string>minimum_version</string>
				</dict>
			</dict>
		</dict>
		<dict>
		    <key>Processor</key>
		    <string>StopProcessingIf</string>
		    <key>Arguments</key>
		    <dict>
		        <key>predicate</key>
		        <string>version_exists == True</string>
		    </dict>
		</dict>
        <dict>
           <key>Processor</key>
           <string>PkgCopier</string>
           <key>Arguments</key>
           <dict>
              <key>source_pkg</key>
              <string>%pathname%</string>
              <key>pkg_path</key>
              <string>%RECIPE_CACHE_DIR%/AutodeskFusion360-%version%.pkg</string>
           </dict>
        </dict>
		<dict>
        	<key>Processor</key>
        	<string>Copier</string>
        	<key>Arguments</key>
        	<dict>
				<key>source_path</key>
				<string>%pkg_path%</string>
				<key>destination_path</key>
				<string>/Users/%current_user%/Desktop/packagesupload/</string>
			</dict>
		</dict>
		<dict>
        	<key>Processor</key>
        	<string>com.github.adrienpi.SharedProcessors/CSVWriter_titleeditor</string>
        	<key>Arguments</key>
        	<dict>
				<key>app_name</key>
				<string>AutodeskFusion360-%version%.pkg</string>
				<key>app_version</key>
				<string>%version%</string>
				<key>category</key>
				<string>Graphisme et animation</string>
				<key>softwaretitle_name</key>
				<string>AutoDesk Fusion 360</string>
				<key>app_minimum_version</key>
				<string>%minimum_version%</string>
				<key>bundle_identifier</key>
				<string>%bundle_identifier%</string>
			</dict>
		</dict>
        <dict>
           <key>Processor</key>
           <string>PkgCopier</string>
           <key>Arguments</key>
           <dict>
              <key>source_pkg</key>
              <string>%pathname%</string>
              <key>pkg_path</key>
              <string>%RECIPE_CACHE_DIR%/AutodeskFusion360-latest.pkg</string>
           </dict>
        </dict>
		<dict>
        	<key>Processor</key>
        	<string>Copier</string>
        	<key>Arguments</key>
        	<dict>
				<key>source_path</key>
				<string>%pkg_path%</string>
				<key>destination_path</key>
				<string>/Users/%current_user%/Desktop/packagesupload/</string>
			</dict>
		</dict>
		<dict>
        	<key>Processor</key>
        	<string>com.github.adrienpi.SharedProcessors/CSVWriter_titleeditor</string>
        	<key>Arguments</key>
        	<dict>
				<key>app_name</key>
				<string>AutodeskFusion360-latest.pkg</string>
				<key>app_version</key>
				<string>%version%</string>
				<key>category</key>
				<string>Graphisme et animation</string>
				<key>softwaretitle_name</key>
				<string>AutoDesk Fusion 360</string>
				<key>app_minimum_version</key>
				<string>%minimum_version%</string>
				<key>bundle_identifier</key>
				<string>%bundle_identifier%</string>
			</dict>
		</dict>
		<dict>
			<key>Processor</key>
			<string>com.github.adrienpi.SharedProcessors/TeamsNotification</string>
		</dict>
		<dict>
            <key>Arguments</key>
            <dict>
                <key>path_list</key>
                <array>
                    <string>%RECIPE_CACHE_DIR%/unpack</string>
                    <string>%RECIPE_CACHE_DIR%/payload</string>
                </array>
            </dict>
            <key>Processor</key>
            <string>PathDeleter</string>
        </dict>
    </array>
</dict>
</plist>